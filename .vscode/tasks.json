{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "java",
			"label": "Export MultiplayerExtension Jar",
			"targetPath": "${workspaceFolder}/extensions/MultiplayerExtension/MultiplayerExtension.jar",
			"elements": [
				"${compileOutput}",
				"${dependencies}"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
			}
		},
		{
			"label": "tunnel_and_start",
			"dependsOn": [
				"tunnel",
				"start_sfs2x",
			],
			"dependsOrder": "sequence",
		},
		{
			"label": "terminate",
			"command": "echo ${input:terminate}",
			"type": "shell",
		},
		{
			"label": "start_sfs2x",
			"type": "shell",
			"runOptions": {
				"instanceLimit": 1
			},
			"isBackground": true,
			"command": "./start.sh",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": ".",
					}
				}
			]
		},
		{
			"label": "tunnel",
			"type": "shell",
			"runOptions": {
				"instanceLimit": 1
			},
			"isBackground": true,
			"command": "ssh -L 3306:dblocalhost:3306 flashfla@flashflashrevolution.com",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": ".",
					}
				}
			]
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}
